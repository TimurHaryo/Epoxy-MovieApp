<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieEpoxy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.MovieEpoxy.DefaultTextView</item>
    </style>

<!--   Text View-->
    <style name="Theme.MovieEpoxy.DefaultTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Theme.MovieEpoxy.HeaderInfo" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/gray_nero</item>
        <item name="android:textColor">#838383</item>
    </style>

    <style name="Theme.MovieEpoxy.Heading1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MovieEpoxy.Heading2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MovieEpoxy.Heading3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MovieEpoxy.Heading4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
<!--    Text View-->

<!--    Button-->
    <style name="Theme.MovieEpoxy.ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">12dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">24dp</item>
        <item name="iconTint">@color/teal_700</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.MovieEpoxy.ButtonCenterContent" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">24dp</item>
        <item name="iconTint">@color/teal_700</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.MovieEpoxy.ButtonVideoBanner" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/watch_announcement</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">20dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">10dp</item>
        <item name="drawableTint">@color/black</item>
        <item name="drawableLeftCompat">@drawable/ic_play_arrow</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.MovieEpoxy.ButtonExploreBanner" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/join_the_fun</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">20dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">10dp</item>
        <item name="drawableTint">@color/white</item>
        <item name="drawableLeftCompat">@drawable/ic_place</item>
        <item name="backgroundTint">#232323</item>
    </style>
<!--    Button-->

<!--    ImageView-->
    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>
<!--    ImageView-->
</resources>